{% extends 'layout.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}

    <h1>
        {{ (vehicleType == 'boat')? 'Bateau' : 'Scooter' }} #{{ vehicle.id }}
    </h1>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Type</th>
            <th scope="col">Fuel</th>
            <th scope="col">Année de création</th>
        </tr>
        </thead>
        <tbody>
        <tr>

            <td>{{ vehicle.name }}</td>
            <td>{{ vehicle.type }}</td>
            <td>{{ vehicle.fuel }}</td>
            <td>{{ vehicle.fabricationYear }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}